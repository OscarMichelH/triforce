
<div class="header py-5 py-lg-8 pt-lg-9">
  <div class="container">

    <div class="row justify-content-center">
      <div class="col-4 card">

        <div class="align-content-center text-center pt-2 mt-3">
            <h3><%= t('devise.register_a_new_account') %></h3>
            <%= t('devise.select_account_type') + ':' %>
            <div class="btn-group" role="group" aria-label="Basic example">
              <button type="button" class="btn btn-secondary text-white" id="buyer_btn"><%= t('activerecord.attributes.user.role.buyer') %></button>
<!--              <button type="button" class="btn btn-secondary text-white" id="seller_btn"><%#= t('activerecord.attributes.user.role.seller') %></button>-->
            </div>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
          </div>

          <div id="buyer_field" style="display: none;">
            <div class="field">
              <%= f.label :address %><br />
              <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control', id:'buyer_field_address' %>
            </div>
          </div>


          <div id="seller_field" style="display: none;">
            <div class="field">
              <%= f.label :phone %><br />
              <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone", class: 'form-control', id: 'seller_field_phone' %>
            </div>
          </div>



          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>


          <div class="align-content-center text-center pt-4">
            <%= f.submit t('devise.sign_up'), class: "btn-primary text-white rounded-pill bold px-5 p-2", style: '' %>
          </div>

            <%= render "devise/shared/links" %>
        <% end %>

        </div>

      </div>
    </div>
  </div>
</div>


<script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
        $(".btn-group > .btn").click(function(){
            $(this).addClass("active").siblings().removeClass("active");
        });
        $( "#buyer_btn" ).on('click', function() {
            $('#seller_field_phone').val("");
            $( "#buyer_field" ).show();
            $( "#seller_field" ).hide();

        })
        $( "#seller_btn" ).on('click', function() {
            $('#buyer_field_address').val("");
            $( "#seller_field" ).show();
            $( "#buyer_field" ).hide();
        })
    });
</script>

