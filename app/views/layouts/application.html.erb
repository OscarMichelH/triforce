<html>
<%= render 'common/head' %>
<body>
<div class="row">
  <% if current_user %>
    <div class="col-12">
      <%= render partial: 'pages/topnav', locals: { bg_color_class: yield(:topnav_bg) } %>

    </div>
    <div class="col-2">
        <%= render 'pages/sidenav' %>
    </div>
    <div class="col-10">
      <%= yield %>
    </div>
  <% else %>
    <div class="col-12">
      <%= render partial: 'pages/topnav', locals: { bg_color_class: yield(:topnav_bg) } %>
      <div class="container-fluid">
        <%= yield %>
      </div>
    </div>

  <% end %>
</div>

</body>
</html>
<script src="https://sdk.mercadopago.com/js/v2"></script>
