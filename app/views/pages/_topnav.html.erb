<nav class="navbar navbar-expand-md navbar-primary bg-primary border-bottom " >
  <div class="col-4"></div>
  <div class="col-4 d-flex justify-content-center">
    <%= link_to root_path do %>
        <%= image_tag "/logo.svg" %>
    <% end %>
  </div>
  <% if !current_user %>
    <div class="col-4 d-flex justify-content-end ms-auto mb-2 mb-lg-0 m-1">
        <%= link_to new_user_registration_path do %>
          <%= image_tag t('icons.register'), class: 'pt-1' %>
        <% end %>
        <%= link_to new_user_session_path do %>
          <%= image_tag t('icons.login') %>
        <% end %>
    </div>

  <%  else %>
      <div class="container-fluid">
        <% if user_signed_in? %>

          <ul class="navbar-nav ml-auto text-right ms-auto mb-2 mb-lg-0 m-1 justify-content-end">
            <% if current_user.is_buyer? %>
              <li class="nav-item m-1">
                <%= link_to cart_path(current_user&.cart&.id || current_user.validate_cart) do %>
                  <i class="bi bi-cart-fill text-white"></i>
                  <p id="items_in_cart" class="text-white d-inline"><%= current_user&.cart&.items&.count %></p>
                <% end %>
              </li>
            <% end %>
           <li class="nav-item m-1">
            <div class="card">

              <% if current_user.is_buyer? %>
                <%= link_to "Balance: " + current_user.balance.to_s, user_reload_balance_path(current_user), style: "text-decoration:none; " %>
              <% else %>
                Balance: <%= current_user.balance %>
              <% end %>
            </div>
            </li>
            <li class="nav-item dropdown text-right">
              <div class="dropdown ">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                  <div class="media align-items-center">
                    <span class="avatar avatar-sm rounded-circle">
                      <%= image_tag "blank-profile.png", class: "navbar-brand-img", alt: "..." %>
                    </span>
                    <div class="media-body  ml-2  d-none d-lg-block text-dark">
                      <span class="mb-0 text-sm  font-weight-bold text-white"><%= current_user.email %></span>
                    </div>
                  </div>
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                  <div class="dropdown-header noti-title">
                    <h6 class="text-overflow m-0"><%= t('general.welcome') %></h6>
                  </div>
                  <%= link_to current_user , class: 'dropdown-item' do %>
                    <i class="ni ni-single-02"></i>
                    <span>My User</span>
                  <% end %>
                  <div class="dropdown-divider"></div>
                  <%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do %>
                    <i class="ni ni-user-run"></i>
                    <span><%= t('devise.sign_out') %></span>
                  <% end %>
                </ul>
              </div>
            </li>
        </ul>
        <% end %>

      </div>
  <% end %>
</nav>