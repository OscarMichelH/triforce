
<%= simple_form_for(@shipment) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :phone_number %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :zipcode %>
    <%= f.input :country %>
    <%= f.input :track_number %>
    <%= f.input :status %>
    <%= f.input :method %>
    <%= f.input :payment_id %>
    <%= f.input :payment_type %>
    <%= f.input :collection_id %>
    <%= f.input :collection_status %>
    <%= f.input :preference_id %>
    <%= f.input :merchant_order_id %>
    <%= f.association :cart %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
